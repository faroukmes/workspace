<body>
    <div class="container">
        <h1>Flexible Pricing Plans</h1>
        <p class="subtitle">Choose the plan that works best for your business needs. All plans include a 14-day free trial.</p>
    </div>

    <div class="pricing-container" id="pricing-container">
        <!-- Cards will be generated by JavaScript -->
    </div>

    <div class="controls">
        <button class="control-btn" onclick="addNewCard()">Add New Card</button>
        <button class="control-btn" onclick="toggleFeatured()">Toggle Featured</button>
    </div>

    <script>
        // Pricing card data
        const pricingData = [
            {
                title: "Basic Plan",
                price: "$9.99",
                period: "month",
                features: [
                    "1 GB Storage",
                    "Basic Support",
                    "All Core Features",
                    "1 User Included",
                    "Email Support"
                ]
            },
            {
                title: "Pro Plan",
                price: "$19.99",
                period: "month",
                features: [
                    "10 GB Storage",
                    "Priority Support",
                    "All Core Features",
                    "5 Users Included",
                    "24/7 Email & Chat Support",
                    "Advanced Analytics"
                ],
                featured: true
            },
            {
                title: "Enterprise Plan",
                price: "$49.99",
                period: "month",
                features: [
                    "Unlimited Storage",
                    "24/7 Premium Support",
                    "All Features Included",
                    "Unlimited Users",
                    "Dedicated Account Manager",
                    "Custom Integrations",
                    "SSO Authentication"
                ]
            }
        ];

        // Function to create a pricing card
        function createPricingCard(data, index) {
            const card = document.createElement('div');
            card.className = `pricing-card ${data.featured ? 'featured' : ''}`;
            card.innerHTML = `
                <h2 class="title">${data.title}</h2>
                <p class="price">${data.price} <span>/${data.period}</span></p>
                <ul class="features">
                    ${data.features.map(feature => `<li>${feature}</li>`).join('')}
                </ul>
                <button class="btn" onclick="selectPlan(${index})">Start Trial</button>
            `;
            return card;
        }

        // Function to render all pricing cards
        function renderPricingCards() {
            const container = document.getElementById('pricing-container');
            container.innerHTML = '';
            pricingData.forEach((data, index) => {
                const card = createPricingCard(data, index);
                container.appendChild(card);
            });
        }

        // Function to select a plan
        function selectPlan(index) {
            alert(`You selected the ${pricingData[index].title} at ${pricingData[index].price} per ${pricingData[index].period}`);
        }

        // Function to add a new card
        function addNewCard() {
            const newCard = {
                title: "Custom Plan",
                price: "$29.99",
                period: "month",
                features: [
                    "5 GB Storage",
                    "Standard Support",
                    "All Core Features",
                    "3 Users Included",
                    "Email & Chat Support"
                ]
            };
            pricingData.push(newCard);
            renderPricingCards();
        }

        // Function to toggle featured status of the first card
        function toggleFeatured() {
            pricingData[0].featured = !pricingData[0].featured;
            renderPricingCards();
        }

        // Initialize the pricing cards on page load
        window.onload = renderPricingCards;
    </script>
</body>
</html>